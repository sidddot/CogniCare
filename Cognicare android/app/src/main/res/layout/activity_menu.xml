<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">


    <Button
        android:id="@+id/card_matching_button"
        android:layout_width="156dp"
        android:layout_height="103dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="452dp"
        android:backgroundTint="#F3AB41"
        android:text="Card matching "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/memory_block_button"
        android:layout_width="156dp"
        android:layout_height="103dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="332dp"
        android:backgroundTint="#F4AC41"
        android:text="Memory Update"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/corsi_block_button"
        android:layout_width="156dp"
        android:layout_height="103dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="332dp"
        android:backgroundTint="#F4AC41"
        android:text="Corsi Block "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nback_button"
        android:layout_width="156dp"
        android:layout_height="103dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="204dp"
        android:backgroundTint="#F4AC41"
        android:text="N-Back Game"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/random_word_button"
        android:layout_width="156dp"
        android:layout_height="103dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="204dp"
        android:backgroundTint="#F4AC41"
        android:text="Random Word "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/maze_game_button"
        android:layout_width="156dp"
        android:layout_height="103dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="452dp"
        android:backgroundTint="#F4AC41"
        android:text="Maze Game"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/results_button"
        android:layout_width="212dp"
        android:layout_height="58dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@color/black"
        android:cursorVisible="true"
        android:fontFamily="sans-serif-medium"
        android:text="Track Progress"
        android:textAllCaps="true"
        android:textColor="#F8F4F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="211dp"
        android:layout_height="104dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:text="Choose the Game"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
